.reward {
  background: #fff;
  padding: 30rpx 0rpx;
}
.btn-gift {
  font-size: 32rpx;
  background: #fae37c;
  box-shadow: 4rpx 8rpx 12rpx rgba(250, 227, 124, 0.5);
  padding: 20rpx 0rpx;
  border-radius: 50rpx;
  line-height: normal;
  display: flex;
  align-items: center;
  margin: 30rpx auto;
  margin-bottom: 20rpx;
  width: 300rpx;
  justify-content: center;
}
.btn-gift::after {
  border: none;
}
.btn-gift.btn-disabled {
  background: #f8f8f8;
  color: #8a8a8a;
  box-shadow: none;
}
.btn-gift .icon {
  font-size: 42rpx;
  margin-right: 10rpx;
}
.btn-gift.btn-hover {
  background: rgba(250, 227, 124, 0.5);
}
.gift-des {
  color: #d81e06;
  font-size: 26rpx;
  text-align: center;
}
.gift-des .icon {
  margin-right: 8rpx;
}
.btn-des {
  font-size: 26rpx;
  color: #7a8299;
  text-align: center;
  margin-bottom: 30rpx;
}
.dialog {
  padding-bottom: 40rpx;
}
.dialog .dialog-title {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 34rpx;
  padding: 30rpx 0rpx;
  padding-bottom: 0rpx;
}
.dialog .dialog-title .icon {
  font-size: 56rpx;
  margin-right: 8rpx;
}
.dialog .dialog-title-des {
  font-size: 26rpx;
  text-align: center;
  color: #b2b2b2;
  padding: 20rpx 0rpx;
  padding-bottom: 40rpx;
}
.dialog .dialog-content {
  display: flex;
  flex-wrap: wrap;
}
.dialog .dialog-content .item {
  flex-basis: 220rpx;
  color: #8a8a8a;
  border: solid #f1f1f1 1rpx;
  padding: 30rpx 0rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  text-align: center;
  margin-left: 20rpx;
  margin-bottom: 30rpx;
}
.dialog .dialog-content .item.active {
  border-color: #fae37c;
  background: #fae37c;
  color: #000;
}

