.cells {
  background: #ffffff;
  margin-bottom: 30rpx;
}
.cells .cell {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 40rpx 30rpx;
  font-size: 36rpx;
}
.cells .cell .left {
  flex-basis: 240rpx;
}
.cells .cell .right {
  align-content: flex-end;
  display: flex;
  align-items: center;
  color: #b2b2b2;
  font-size: 30rpx;
}
.cells .cell .right .icon {
  font-size: 34rpx;
}
.cells .cell.btn-cell {
  justify-content: center;
  align-items: center;
  color: #409eff;
}
.cells .cell.btn-cell .icon {
  font-size: 38rpx;
  font-weight: bold;
  margin-right: 20rpx;
}
.cells .cell-hover {
  background: #f8f8f8;
}
.des {
  padding: 20rpx 30rpx;
  color: #888888;
  font-weight: lighter;
  font-size: 26rpx;
  margin-top: -30rpx;
}
.avtater {
  text-align: center;
  padding: 30rpx;
  position: relative;
}
.avtater image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  border: #ffffff solid 8rpx;
  box-shadow: 4px 4px 4px rgba(0, 0, 0, 0.1);
}
.avtater .btn-edit {
  background: #ffffff;
  border: #ffffff solid 8rpx;
  box-shadow: 4px 4px 4px rgba(0, 0, 0, 0.1);
  width: 64rpx;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  position: absolute;
  bottom: 30rpx;
  left: 395rpx;
  border-radius: 64rpx;
}
.avtater .btn-edit.icon {
  font-size: 48rpx;
}
.input-bg {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 30rpx;
}
.input-bg textarea {
  width: 550rpx;
  font-size: 32rpx;
  text-align: left;
}
.nick-input {
  font-size: 34rpx;
  text-align: left;
}
.picker-col {
  line-height: 50px;
  text-align: center;
}
.dialog .title {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.dialog .title .center {
  flex-grow: 1;
  text-align: center;
  font-size: 32rpx;
}
.dialog .title .btn-mini {
  padding: 30rpx 40rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.dialog .title .btn-mini.btn-confirm {
  color: #09bb07;
}

