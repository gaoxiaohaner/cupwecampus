.container {
  position: relative;
  height: calc(100vh);
}
.container .btn-add {
  position: fixed;
  left: 200rpx;
  bottom: 50rpx;
  background: #fae37c;
  color: #13100e;
  border: none;
  box-shadow: 4rpx 8rpx 12rpx rgba(250, 227, 124, 0.3);
  padding: 20rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  border-radius: 80rpx;
  width: 350rpx;
  box-sizing: border-box;
  justify-content: center;
}
.container .btn-add .icon {
  font-size: 34rpx;
  font-weight: bold;
  margin-right: 10rpx;
}
.container .btn-add.btn-hover {
  background: rgba(250, 227, 124, 0.9);
}

