.container {
  background-image: url(http://love.gh0614.com/quanziimage/bg_2.jpg);
  background-size: 800rpx 1200rpx;
  background-repeat: no-repeat;
  position: relative;
  height: calc(100vh);
}
.container .head {
  color: #ffffff;
}
.container .head .avtater {
  text-align: left;
  margin-left: 32rpx;
  margin-top: 100rpx;
  position: relative;
}
.container .head .avtater > image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  border: #ffffff solid 8rpx;
  box-shadow: 4px 4px 4px rgba(0, 0, 0, 0.1);
}
.container .head .avtater .feeling {
  position: absolute;
  left: 160rpx;
  bottom: 20rpx;
}
.container .head .avtater .feeling image {
  width: 48rpx;
  height: 48rpx;
}
.container .head .avtater .btn-follow {
  position: absolute;
  right: 60rpx;
  top: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 14rpx 38rpx;
  font-size: 30rpx;
  border-radius: 80rpx;
  display: flex;
  align-items: center;
}
.container .head .avtater .btn-follow.has {
  color: #c2c2c2;
}
.container .head .avtater .btn-follow .icon {
  margin-right: 8rpx;
  font-weight: bold;
}
.container .head .info {
  text-align: left;
  position: relative;
  padding: 30rpx 0rpx;
}
.container .head .info .name {
  margin-top: 20rpx;
  display: flex;
  height: 60rpx;
  flex-direction: row;
  align-items: center;
  margin-left: 60rpx;
  justify-content: flex-start;
}
.container .head .info .name .nick {
  font-size: 42rpx;
  font-weight: bold;
}
.container .head .info .name .gender {
  font-size: 18rpx;
  background: #ff68a2;
  color: #ffffff;
  margin-left: 8rpx;
  border-radius: 22rpx;
  padding: 4rpx 8rpx;
}
.container .head .info .sign {
  font-size: 30rpx;
  padding-left: 60rpx;
  padding-right: 100rpx;
  padding-bottom: 60rpx;
  margin-top: 20rpx;
}
.container .head .info .sign .icon {
  color: #888888;
  font-size: 30rpx;
}
.container .head .info .des {
  padding: 10rpx 0rpx;
  margin-left: 60rpx;
  height: 40rpx;
}
.container .head .info .des view {
  display: inline-block;
  font-size: 24rpx;
}
.container .head .info .des view::after {
  content: 'Â·';
}
.container .head .info .des view:last-child::after {
  content: '';
}
.container .head .info .action {
  margin: 40rpx 0rpx;
  padding-bottom: 40rpx;
}
.container .head .tool {
  display: flex;
  align-items: center;
  margin-left: 60rpx;
}
.container .head .tool .item {
  display: inline-block;
  padding: 12rpx 0rpx;
  padding-right: 60rpx;
}
.container .head .tool .item .value {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 8rpx;
}
.container .head .tool .item .label {
  font-size: 24rpx;
}
.container .content {
  width: 100%;
  left: 0rpx;
  background: #ffffff;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  transition: all 0.3s;
}
.container .content swiper {
  background: #f8f8f8;
}
.container .content swiper scroll-view {
  background: #f8f8f8;
}
.container .content swiper scroll-view .empty {
  height: 80rpx;
}

