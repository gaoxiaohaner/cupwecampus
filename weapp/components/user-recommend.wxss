.recommend {
  margin-bottom: 30rpx;
}
.recommend .title {
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  color: #99a9bf;
  text-align: left;
}
.recommend .list {
  display: flex;
  flex-direction: row;
  padding: 0rpx 30rpx;
}
.recommend .list .item {
  margin-right: 20rpx;
  padding: 30rpx 20rpx;
  flex-basis: 240rpx;
  flex-shrink: 0;
  border-radius: 20rpx;
  background: #fff;
  text-align: center;
}
.recommend .list .item.item-space {
  margin-right: 30rpx;
  background: #f8f8f8;
  flex-basis: 1rpx;
}
.recommend .list .item image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
}
.recommend .list .item .item-title {
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  margin: 10rpx 0rpx;
  max-width: 240rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  /*设置文本行数限制*/
  -webkit-box-orient: vertical;
  /*设置文本排列方式*/
}
.recommend .list .item .item-des {
  font-size: 24rpx;
  color: #b2b2b2;
  max-width: 240rpx;
  height: 84rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  /*设置文本行数限制*/
  -webkit-box-orient: vertical;
  /*设置文本排列方式*/
}
.recommend .list .item .item-action .btn {
  width: 200rpx;
  font-size: 28rpx;
  background: #fae37c;
  box-shadow: 4rpx 8rpx 12rpx rgba(250, 227, 124, 0.5);
  padding: 14rpx 20rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  line-height: normal;
  justify-content: center;
}
.recommend .list .item .item-action .btn::after {
  border: none;
}
.recommend .list .item .item-action .btn.has {
  box-shadow: none;
  background: #f8f8f8;
  color: #b2b2b2;
  font-size: 26rpx;
}
.recommend .list .item .item-action .icon {
  font-size: 32rpx;
  margin-right: 6rpx;
  font-weight: bold;
}

