.item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
}
.item.item-hover {
  background: #fafafa;
}
.item image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 10rpx;
}
.item .item-content {
  flex-grow: 1;
  text-align: left;
  margin-left: 30rpx;
}
.item .item-content .item-title {
  font-size: 30rpx;
}
.item .item-content .item-des {
  font-size: 26rpx;
  margin-top: 12rpx;
  color: #b2b2b2;
  max-width: 410rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  /*设置文本行数限制*/
  -webkit-box-orient: vertical;
  /*设置文本排列方式*/
}
.item .item-action .btn-follow {
  font-size: 28rpx;
  background: #fae37c;
  box-shadow: 4rpx 8rpx 12rpx rgba(250, 227, 124, 0.5);
  padding: 14rpx 20rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  line-height: normal;
}
.item .item-action .btn-follow::after {
  border: none;
}
.item .item-action .btn-follow.has {
  box-shadow: none;
  background: #f8f8f8;
  color: #b2b2b2;
  font-size: 26rpx;
}
.item .item-action .icon {
  font-size: 32rpx;
  margin-right: 6rpx;
  font-weight: bold;
}
.item .item-action .num {
  font-size: 28rpx;
  color: #409eff;
}

