.action-tool {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  transition: all 0.3s;
  z-index: 10001;
}
.action-tool .btn-i {
  width: 96rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  background: #fae37c;
  border-radius: 96rpx;
  box-shadow: 2px 3px 6px rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
  position: relative;
}
.action-tool .btn-i.btn-circle {
  width: 84rpx;
  height: 84rpx;
  line-height: 84rpx;
  margin-left: 6rpx;
  transition: all 0.3s;
}
.action-tool .btn-i .btn-des {
  position: absolute;
  width: 160rpx;
  left: -190rpx;
  box-shadow: 2px 3px 6px rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  line-height: 72rpx;
  top: 8rpx;
  background: #f1f1f1;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s;
}
.action-tool .btn-i .icon {
  font-size: 56rpx;
  transition: all 0.3s;
}
.mask {
  background: rgba(255, 255, 255, 0.95);
  position: fixed;
  height: calc(100vh);
  top: 0px;
  left: 0px;
  width: 100%;
  z-index: 10000;
}

